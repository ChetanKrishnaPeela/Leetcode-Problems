class Solution 
{
    public int maxArea(int[] height) 
    {
        int i=0,j=height.length-1, highest=0;
        while(i<j)
        {
            if(height[i] < height[j]) 
            {
                highest = Math.max(highest,height[i]*(j-i));
                i++;
            }
            else
            {
                highest = Math.max(highest,height[j]*(j-i));
                j--;
            }
        }
        return highest;
    }
}
